    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"

        android:orientation="vertical">







        <EditText
            android:id="@+id/questiontitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000"
            android:hint="Question"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_no_light"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/choiceA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="1st Choice"
            android:textSize="22dp"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#000"
            android:background="@drawable/quizbtn"/>


        <EditText
            android:id="@+id/choiceB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="2nd Choice"
            android:textSize="22dp"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#000"
            android:background="@drawable/quizbtn"/>



        <EditText
            android:id="@+id/choiceC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="3rd Choice"
            android:textSize="22dp"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#000"
            android:background="@drawable/quizbtn"/>


        <EditText
            android:id="@+id/choiceD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="4th Choice"
            android:textSize="22dp"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#000"
            android:background="@drawable/quizbtn"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:onClick="buttonA"
            android:text="Answer"
            android:textSize="22dp"
            android:gravity="left"
            android:padding="10dp"
            android:textColor="#fff"/>

        <EditText
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write Answer Here"
            android:textSize="22dp"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#000"
            android:background="@drawable/quizbtn"/>




        <Button
            android:id="@+id/submitQuest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:padding="20dp"
            android:onClick="AddnewQuest"
            android:textColor="#fff"
            android:text="Submit"
            android:background="@drawable/button_yes"/>



    </LinearLayout>


</LinearLayout>